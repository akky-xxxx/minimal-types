{
  "name": "minimal-types",
  "version": "0.0.2",
  "author": "akky-xxxx <114.s.aki@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/akky-xxxx/minimal-types.git"
  },
  "homepage": "https://github.com/akky-xxxx/minimal-types",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "check-all": "npm-run-all -s fix -p lint spell-check type-check",
    "check-code": "run-p lint spell-check type-check",
    "fix": "run-p fix:* -c",
    "fix-ts-by-eslint": "eslint \"./{src,spec}/**/*.ts\" --fix --max-warnings 0 --cache --cache-strategy content",
    "fix-ts-by-prettier": "prettier \"./{src,spec}/**/*.ts\" --cache --cache-strategy content --write",
    "fix:config": "prettier \"./*.{js,json}\" \"./**/*.{js,json}\" --write",
    "fix:pack": "fixpack",
    "fix:ts": "run-s fix-ts-by-prettier fix-ts-by-eslint",
    "lint": "run-p lint:* -c",
    "lint-editorconfig": "editorconfig-checker",
    "lint-ts-by-eslint": "eslint \"./{src,spec}/**/*.ts\" --max-warnings 0 --cache --cache-strategy content",
    "lint-ts-by-prettier": "prettier \"./{src,spec}/**/*.ts\" --cache --cache-strategy content --check",
    "lint:config": "prettier \"./*.{js,json}\" \"./**/*.{js,json}\" --check",
    "lint:pack": "fixpack --dryRun",
    "lint:ts": "run-s lint-ts-by-eslint lint-ts-by-prettier",
    "spell-check": "cspell \"./*.js\" \"./**/*.js\" --no-progress",
    "tagging": "node ./scripts/tagging/index.js",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "cspell": "6.28.0",
    "editorconfig-checker": "5.0.1",
    "eslint": "8.36.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.7.0",
    "eslint-config-strict-check": "0.0.15",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-sonarjs": "0.18.0",
    "eslint-plugin-strict-check": "0.0.10",
    "eslint-plugin-tsdoc": "0.2.17",
    "eslint-plugin-unicorn": "46.0.0",
    "fixpack": "4.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "typescript": "4.9.5"
  }
}
